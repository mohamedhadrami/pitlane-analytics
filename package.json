    "@vercel/postgres": "^0.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.1.5",
    "lucide-react": "^0.424.0",
    "next": "^14.2.5",
    "next-themes": "^0.3.0",
    "pg": "^8.11.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-fast-marquee": "^1.6.4",
    "react-loader-spinner": "^6.1.6",
    "recharts": "^2.12.6",
    "sonner": "^1.4.41",
