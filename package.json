  },
  "homepage": "https://pitlane-analytics.vercel.app",
  "keywords": [
    "Next.js",
    "TypeScript",
    "React",
    "Telemetry",
    "Pitlane",
    "Analytics",
    "Formula 1",
    "F1"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
