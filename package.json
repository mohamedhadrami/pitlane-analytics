{
  "name": "pitlane-analytics",
  "version": "1.5.2",
  "private": true,
  "description": "A Next.js application for analyzing pitlane data.",
  "author": "Mohamed Hadrami <mohamedhadrami9@gmail.com>",
  "license": "GNU",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamedhadrami/pitlane-analytics"
  },
